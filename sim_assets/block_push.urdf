<?xml version="1.0"?>
<robot name="2d_ball">

  <material name="Blue">
    <color rgba="0.1 0.1 1.0 1.0"/>
  </material>
  <material name="Green">
    <color rgba="0.1 1.0 0.1 1.0"/>
  </material>
  <material name="Red">
    <color rgba="1.0 0.1 0.1 0.5"/>
  </material>
  <material name="Grey">
    <color rgba="0.3 0.3 0.3 1.0"/>
  </material>

  <link name="ground">
    <inertial>
      <mass value="1" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1"  ixy="0"  ixz="0" iyy="1" iyz="0" izz="1" />
    </inertial>
    <visual>
      <origin xyz="0 0 -0.5" rpy="0 0 0" />
      <geometry>
        <box size="40 40 1"/>
      </geometry>
      <material name="Grey"/>
    </visual>
    <collision>
      <origin xyz="0 0 -0.5" rpy="0 0 0" />
      <geometry>
        <box size="40 40 1"/>
      </geometry>
    </collision>
  </link>
  <link name="slider"/>

  <link name="cylinder">
    <inertial>
      <mass value="1" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1"  ixy="0"  ixz="0" iyy="1" iyz="0" izz="1" />
    </inertial>
    <visual>
      <origin xyz="0 0 0.25" rpy="0 0 0" />
      <geometry>
        <cylinder radius="0.1" length="0.48"/>
      </geometry>
      <material name="Green"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.25" rpy="0 0 0" />
      <geometry>
        <cylinder radius="0.1" length="0.48"/>
      </geometry>
    </collision>
  </link>

  <joint name="xslide" type="prismatic">
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <axis xyz="1 0 0"/>
    <parent link="ground"/>
    <child link="slider"/>
  </joint>
  <joint name="yslide" type="prismatic">
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <axis xyz="0 1 0"/>
    <parent link="slider"/>
    <child link="cylinder"/>
  </joint>

  <transmission name="xslide_transmission">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="xslide"/>
    <actuator name="xslide_actuator">
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>
  <transmission name="yslide_transmission">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="yslide"/>
    <actuator name="yslide_actuator">
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

  <link name="block">
    <inertial>
      <mass value="1" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1"  ixy="0"  ixz="0" iyy="1" iyz="0" izz="0.4" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <box size="0.5 0.5 0.5"/>
      </geometry>
      <material name="Blue"/>
    </visual>
    <visual>
      <origin xyz="0.125 0 0.25" rpy="0 1.570796 0" />
      <geometry>
        <cylinder radius="0.01" length="0.25"/>
      </geometry>
      <material name="Red"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <box size="0.5 0.5 0.5"/>
      </geometry>
    </collision>
  </link>

</robot>
